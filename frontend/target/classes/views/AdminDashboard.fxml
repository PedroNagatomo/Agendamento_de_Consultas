<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.agendamento.fx.controller.AdminDashboardController"
      spacing="10"
      alignment="TOP_CENTER"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Dashboard Administrativo" style="-fx-font-size: 24px; -fx-font-weight: bold;">
        <padding>
            <Insets bottom="20"/>
        </padding>
    </Label>

    <Label fx:id="lblNomeAdmin" text="Administrador: " style="-fx-font-size: 16px;"/>

    <Separator prefWidth="1000">
        <VBox.margin>
            <Insets top="20" bottom="20"/>
        </VBox.margin>
    </Separator>

    <Label text="Funcionalidades administrativas em desenvolvimento..."
           style="-fx-font-size: 14px; -fx-text-fill: #666;"/>

    <Button fx:id="btnSair" text="Sair"
            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10 20;">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>
    </Button>

</VBox>