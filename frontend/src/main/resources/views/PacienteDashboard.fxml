<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.agendamento.fx.controller.PacienteDashboardController"
            stylesheets="@../styles/style.css"
            styleClass="background">

    <top>
        <VBox styleClass="header" spacing="8">
            <padding>
                <Insets top="25" right="30" bottom="25" left="30"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="25">
                <Label text=" MediSchedule" styleClass="header-title"/>
                <VBox spacing="4">
                    <Label fx:id="lblNomePaciente" text="Paciente: Carregando..."
                           style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: white;"/>
                    <Label text="Dashboard do Paciente" styleClass="header-subtitle"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox styleClass="content-area" spacing="30">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>

                <!-- Seção: Minhas Consultas -->
                <VBox styleClass="card" spacing="20">
                    <padding>
                        <Insets top="25" right="25" bottom="25" left="25"/>
                    </padding>

                    <VBox spacing="5">
                        <Label text="Minhas Consultas Agendadas" styleClass="card-header"/>
                        <Label text="Visualize e gerencie suas consultas médicas"
                               style="-fx-text-fill: #7F8C8D; -fx-font-size: 14px;"/>
                    </VBox>

                    <TableView fx:id="consultasTable" styleClass="table-view">
                        <padding>
                            <Insets top="10" bottom="10"/>
                        </padding>
                        <columns>
                            <TableColumn fx:id="colMedico" text="Médico" prefWidth="280"/>
                            <TableColumn fx:id="colEspecialidade" text="Especialidade" prefWidth="180"/>
                            <TableColumn fx:id="colData" text="Data/Hora" prefWidth="180"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="150"/>
                        </columns>
                    </TableView>

                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <padding>
                            <Insets top="20"/>
                        </padding>
                        <Button fx:id="btnCancelarConsulta" text="Cancelar Consulta"
                                styleClass="button-danger button-small"
                                prefWidth="160"/>
                        <Button fx:id="btnAtualizar" text="Atualizar Lista"
                                styleClass="button-secondary button-small"
                                prefWidth="140"/>
                    </HBox>
                </VBox>

                <!-- Seção: Agendar Nova Consulta -->
                <VBox styleClass="card" spacing="20">
                    <padding>
                        <Insets top="25" right="25" bottom="25" left="25"/>
                    </padding>

                    <VBox spacing="5">
                        <Label text="Agendar Nova Consulta" styleClass="card-header"/>
                        <Label text="Preencha os dados para agendar uma nova consulta"
                               style="-fx-text-fill: #7F8C8D; -fx-font-size: 14px;"/>
                    </VBox>

                    <GridPane hgap="20" vgap="18">
                        <padding>
                            <Insets top="10" bottom="10"/>
                        </padding>
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="180" prefWidth="200"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="250" prefWidth="350"/>
                        </columnConstraints>

                        <!-- Linha 1 -->
                        <Label text="Especialidade:" styleClass="form-label"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="comboEspecialidade" promptText="Selecione uma especialidade"
                                  styleClass="form-field"
                                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <!-- Linha 2 -->
                        <Label text="Médico:" styleClass="form-label"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="comboMedico" promptText="Selecione um médico"
                                  styleClass="form-field"
                                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <!-- Linha 3 -->
                        <Label text="Data:" styleClass="form-label"
                               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="datePicker" promptText="Selecione a data"
                                    styleClass="date-picker"
                                    GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <!-- Linha 4 -->
                        <Label text="Horário:" styleClass="form-label"
                               GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="comboHorario" promptText="Selecione o horário"
                                  styleClass="form-field"
                                  GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <!-- Linha 5 -->
                        <Label text="Observações:" styleClass="form-label"
                               GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextArea fx:id="txtObservacoes" promptText="Descreva seus sintomas (opcional)"
                                  styleClass="text-area" prefRowCount="4"
                                  GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </GridPane>

                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <padding>
                            <Insets top="20"/>
                        </padding>
                        <Button fx:id="btnNovaConsulta" text="Agendar Consulta"
                                styleClass="button-success"
                                prefWidth="200" prefHeight="48"/>
                    </HBox>
                </VBox>

                <!-- Informações Úteis -->
                <VBox styleClass="info-box" spacing="8">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Label text="Informações Importantes:" styleClass="info-box-title"/>
                    <Label text="• Você pode cancelar consultas até 24 horas antes do horário marcado"
                           styleClass="info-box-text"/>
                    <Label text="• Chegue com 15 minutos de antecedência para seu atendimento"
                           styleClass="info-box-text"/>
                    <Label text="• Em caso de emergência, entre em contato pelo telefone (11) 3333-4444"
                           styleClass="info-box-text"/>
                </VBox>

                <!-- Progress Indicator -->
                <ProgressIndicator fx:id="progressIndicator" visible="false"
                                   prefWidth="48" prefHeight="48">
                    <VBox.margin>
                        <Insets top="30"/>
                    </VBox.margin>
                </ProgressIndicator>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox styleClass="footer" spacing="25" alignment="CENTER">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>
            <Label text="© 2026 MediSchedule - Sistema de Agendamento Médico - Versão 1.0.0"
                   styleClass="footer-text"/>
            <Button fx:id="btnSair" text="Sair do Sistema"
                    styleClass="button-secondary button-small"/>
        </HBox>
    </bottom>
</BorderPane>